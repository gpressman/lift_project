<%= @user.id %>

<% @weights.each do |weight| %>
<%= weight.created_at.strftime("%b %d, %Y") %>
<% end %>

<%= form_for ([:user, @weight])  do |f| %>
  <% if @weight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@weight.errors.count, "error") %> prohibited this weight from being saved:</h2>

      <ul>
      <% @weight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :weight %><br>
    <%= f.text_field :weight %>
  </div>

  <div class="actions">
    <%= f.submit "Weigh in" %>
  </div>
<% end %>
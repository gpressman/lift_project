<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @exercise.name %>
</p>

<script type="text/javascript">
FusionCharts.ready(function(){
    var salesChart = new FusionCharts({
      type: "area2d",
      renderAt: "weights_chart",
      width: "500",
      height: "300",
      dataFormat: "json",
      dataSource: {
       "chart": {
          "caption": "Weight over time",
          "subCaption": "Harry's SuperMart",
          "xAxisName": "Day",
          "yAxisName": "weight"
       },
       "data": $('#weights_chart').data('weights')
         
      }
 
  });
  salesChart.render("weights_chart");
}); 
 </script>


 <table id="weights">
  <tr>
  	<th>Number</th>
  	<th>Weight</th>
  	<th>Date </th>
  </tr>
  <% @user_weights.each do |weight| %>
  <tr>
  	<td><%= weight.id %></td>
  	<td><%= weight.weight %></td>
  	<td><%= weight.created_at.strftime("%b %d, %Y") %></td>
  </tr>

  <% end %>

</table>

<div id="weights_chart">FusionCharts XT will load here!</div>


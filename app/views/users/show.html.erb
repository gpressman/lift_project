<body style="background-color: black">
<div class="container">
  <div class="row exercises">
    <h2 class="white">Exercises</h2>
    <div class="col-xs-6">
      <% if @user.exercises %>
      <% @exercises.each do |exercise| %>
        <ul>
          <li><%= link_to("#{exercise.name}", user_exercise_path(current_user, exercise) )%></li>
        </ul> 
      <% end %>
      <% end %>
      <%= render 'exercises/form' %>
      <%= link_to "Compare Movements", new_user_chart_path(current_user) %>
    </div>
    <div class="col-xs-6">
     <p class="white">Current weight:<%= @user.current_weight %></p>
      <div id="chart-container">
        <%= @weights_chart.render() %>
      </div>
      <%= render "weights/new_weight"%>
    </div>
  </div>
</div>
</body>

